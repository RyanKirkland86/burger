<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1>Devour -A- Burger</h1>
    
    <div class="burgerPic">
        <img src="/assets/img/burger.png" alt="burger-pic">
    </div>
</div>
</div>

<div class="container-fluid">
  <div class="row justify-content-center">

    <div class="col-sm">
      <h3>Burgers 2 Devour</h3>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block devour=false}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-sm">
      <h3>Add a Burger</h3>
        <form class="create-form">
            <div class="form-group">
                <label for="newBurger">Burger:</label>
                <input type="text" id="newBurger" name="burger_name">
            </div>
            <div class="form-group">
                <label for="devoured">Place Your Order</label><br>
                <input type="radio" name="devoured" value="1" checked>Devoured<br>
                <input type="radio" name="devoured" value="0">Make An Order
            </div>
            <button type="submit">Add Burger</button>
        </form>
    </div>

    <div class="col-sm">
      <h3>Burgers That You've Eaten</h3>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burger-block devour=true}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
  </div>
</div>